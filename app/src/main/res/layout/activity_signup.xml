<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- Main Part -->
    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textSize="14sp"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/id_err_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@id/id_tv"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/id_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLength="45"
            android:singleLine="true"
            android:layout_below="@id/id_tv" />

        <TextView
            android:id="@+id/pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pw"
            android:textSize="14sp"
            android:layout_below="@id/id_et"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/pw_err_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@id/pw_tv"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/pw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:password="true"
            android:maxLength="45"
            android:singleLine="true"
            android:layout_below="@id/pw_tv" />

        <TextView
            android:id="@+id/pw_re_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pw_re"
            android:textSize="14sp"
            android:layout_below="@id/pw_et"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/pw_re_err_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@id/pw_re_tv"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/pw_re_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:maxLength="45"
            android:singleLine="true"
            android:layout_below="@id/pw_re_tv" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="14sp"
            android:layout_below="@id/pw_re_et"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/email_err_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@id/email_tv"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLength="45"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:layout_below="@id/email_tv" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_label"
            android:theme="@style/ButtonColorTeal"
            android:layout_below="@id/email_et"
            android:layout_marginTop="24dp" />

    </RelativeLayout>

</RelativeLayout>